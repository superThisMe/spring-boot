package com.springboard.aop;

import org.aspectj.lang.JoinPoint;
import org.aspectj.lang.ProceedingJoinPoint;

public class LoggingAspect {

	public void doBefore(JoinPoint joinPoint) {
		System.out.println(String.format("Before %s.%s", joinPoint.getTarget().getClass(), joinPoint.getSignature().getName()));
	}
	
	public void doAfter(JoinPoint joinPoint) {
		System.out.println(String.format("After %s.%s", joinPoint.getTarget().getClass(), joinPoint.getSignature().getName()));
	}
	
	public Object writeLog(ProceedingJoinPoint joinPoint) {
		
		long start = System.currentTimeMillis();
		
		Object returnValue = null;
		try {
			returnValue = joinPoint.proceed();	// 실제 Method 호출
		} catch (Throwable e) {
		}
		
		long stop = System.currentTimeMillis();
		
		System.out.printf("Execution Lap of %s.%s: %d\n", joinPoint.getTarget().getClass(), joinPoint.getSignature().getName(), (stop - start));
		
		return returnValue;
				
	}
	
}
